    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>license-maven-plugin</artifactId>
                    <version>2.0.0</version>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>

            <plugin> <!-- http://www.mojohaus.org/license-maven-plugin/examples/example-thirdparty.html -->
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>**/*.java</include>
                        <include>**/*.xml</include>
                        <include>**/*.zul</include>
                        <include>**/*.css</include>
                        <include>**/*.html</include>
                        <include>**/*.xsd</include>
                    </includes>
                    <extraExtensions>
                        <zul>xml</zul>
                        <xsd>xml</xsd>
                    </extraExtensions>
                    <!-- Because package doc comments precede the package declaration, the license pluginâ€™s remove-file-header goal breaks them. -->
                    <excludes>
                        <exclude>**/package-info.java</exclude>
                        <exclude>**/*.properties</exclude>
                    </excludes>
                    <licenseMerges>
                        <licenseMerge>Apache v2|The Apache Software License, Version 2.0|Apache License, Version
                            2.0|Apache License, version 2.0|Apache License 2.0|Apache 2.0 License|Apache 2.0|Apache
                            2|ALv2
                        </licenseMerge>
                        <licenseMerge>BSD|BSD License|New BSD License|The BSD License|BSD 3-clause New License
                        </licenseMerge>
                        <licenseMerge>CDDL 1.1|Common Development and Distribution License</licenseMerge>
                        <licenseMerge>Eclipse Distribution v1|Eclipse Distribution License - v 1.0|Eclipse Distribution
                            License v. 1.0|EDL 1.0
                        </licenseMerge>
                        <licenseMerge>Eclipse Public v1.0|Eclipse Public License - v 1.0|Eclipse Public License
                        </licenseMerge>
                        <licenseMerge>GPL2 w/ CPE|GNU General Public License, Version 2 with the Classpath Exception
                        </licenseMerge>
                        <licenseMerge>LGPL|GNU LESSER GENERAL PUBLIC LICENSE</licenseMerge>
                        <licenseMerge>LGPL v2.1|LGPL, version 2.1</licenseMerge>
                        <licenseMerge>LGPL v3|GNU Lesser General Public License, Version 3.0|GNU LESSER GENERAL PUBLIC
                            LICENSE, Version 3|lgpl_v3
                        </licenseMerge>
                        <licenseMerge>MIT License|The MIT License</licenseMerge>
                    </licenseMerges>

                    <!-- config for license:update-file-header -->
                    <licenseName>lgpl_v3</licenseName>
                    <inceptionYear>2018</inceptionYear>
                    <organizationName>The Apromore Initiative</organizationName>
                    <copyrightOwners>The University of Melbourne.</copyrightOwners>
                    <projectName>This file is part of "Apromore Community".</projectName>
                    <failOnMissingHeader>true</failOnMissingHeader>
                    <canUpdateCopyright>true</canUpdateCopyright>
                    <!--<canUpdateDescription>true</canUpdateDescription>-->
                    <addJavaLicenseAfterPackage>false</addJavaLicenseAfterPackage>

                </configuration>
                <executions>
                    <!--update (or add) the header on project source files-->
                    <execution>
                        <id>update-file-header</id>
                        <goals>
                            <goal>update-file-header</goal>
                        </goals>
                        <phase>process-sources</phase>
                    </execution>
                    <!--Download the license files of all aggregated dependencies and generate a summary file containing
                    a list of all dependencies and their licenses.-->
                    <!--<execution>
                        <id>aggregate-download-licenses</id>
                        <goals>
                            <goal>aggregate-download-licenses</goal>
                        </goals>
                        <phase>package</phase>
                    </execution>-->
                </executions>
            </plugin>
        </plugins>
    </build>

