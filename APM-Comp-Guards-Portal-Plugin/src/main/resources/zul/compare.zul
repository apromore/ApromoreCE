<window id="win" width="300px" closable="false" position="center" title="Input specification or XML file">
    <vbox>
        <groupbox width="285px">
            <label value="Transition guards:" width="100%"/>
            <textbox rows="5" cols="40" id="transitionGuardsTB">
            </textbox>
            <label value="OR Transition guards file (.txt):" width="100%"/>
                <hbox align="center">
                    <button id="transitionGuardsUpload" label="Upload" upload="true,maxsize=-1,multiple=false,native"/>
                    <label id="fileNameTG" value="File Name" width="100%"/>
                </hbox>
            <separator bar="true" />
            <label value="Conditions:" width="100%"/>
                <textbox rows="5" cols="40" id="conditionsTB">
            </textbox>
            <label value="OR Conditions file (.xml):" width="100%"/>
            <hbox align="center">
                <button id="conditionsUpload" label="Upload" upload="true,maxsize=-1,multiple=false,native"/>
                <label id="fileNameCF" value="File Name" width="100%"/>
            </hbox>
        </groupbox>
        <div align="center">
            <button id="oKButton" label="OK" iconSclass="z-icon-check-circle" ></button>
            <button id="cancelButton" label="Cancel" image="img/cancel2.png"></button>
        </div>
    </vbox>
</window>
