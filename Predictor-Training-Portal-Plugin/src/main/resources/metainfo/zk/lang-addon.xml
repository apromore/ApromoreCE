        <component-class>cs.ut.ui.controllers.Navbar</component-class>
        <widget-class>zul.box.Box</widget-class>
        <mold>
            <mold-name>horizontal</mold-name>
            <mold-uri>mold/hbox.js</mold-uri>
            <css-uri>css/box.css.dsp</css-uri>
