<window id="win" width="300px" closable="true" position="center" title="BEBoP-Guidelines Check">
    <vbox>
        <radiogroup id="size">
            <grid>
                <columns>
                    <column />
                    <column />
                    <column />
                </columns>
                <rows>
                    <row>
                        <label id="guideline1" value=guidelinesList.get(0) width="100%"/>
                        <radio id="ysize" label="yes" selected="true"/>
                        <radio id="nsize" label="no" />
                    </row>
                </rows>
            </grid>
        </radiogroup>

        <radiogroup id="cfc">
            <grid>
                <columns>
                    <column />
                    <column />
                    <column />
                </columns>
                <rows>
                    <row>
                        <label id="cfcL" value="CFC" width="100%"/>
                        <radio id="ycfc" label="yes" selected="true"/>
                        <radio id="ncfc" label="no" />
                    </row>
                </rows>
            </grid>
        </radiogroup>

        <radiogroup id="acd">
            <grid>
                <columns>
                    <column />
                    <column />
                    <column />
                </columns>
                <rows>
                    <row>
                        <label id="acdL" value="ACD" width="100%"/>
                        <radio id="yacd" label="yes" selected="true"/>
                        <radio id="nacd" label="no" />
                    </row>
                </rows>
            </grid>
        </radiogroup>

        <radiogroup id="mcd">
            <grid>
                <columns>
                    <column />
                    <column />
                    <column />
                </columns>
                <rows>
                    <row>
                        <label id="mcdL" value="MCD" width="100%"/>
                        <radio id="ymcd" label="yes" selected="true"/>
                        <radio id="nmcd" label="no" />
                    </row>
                </rows>
            </grid>
        </radiogroup>

        <radiogroup id="cnc">
            <grid>
                <columns>
                    <column />
                    <column />
                    <column />
                </columns>
                <rows>
                    <row>
                        <label id="cncL" value="CNC" width="100%"/>
                        <radio id="ycnc" label="yes" selected="true"/>
                        <radio id="ncnc" label="no" />
                    </row>
                </rows>
            </grid>
        </radiogroup>

        <radiogroup id="density">
            <grid>
                <columns>
                    <column />
                    <column />
                    <column />
                </columns>
                <rows>
                    <row>
                        <label id="densityL" value="Density" width="100%"/>
                        <radio id="ydensity" label="yes" selected="true"/>
                        <radio id="ndensity" label="no" />
                    </row>
                </rows>
            </grid>
        </radiogroup>

        <radiogroup id="structuredness">
            <grid>
                <columns>
                    <column />
                    <column />
                    <column />
                </columns>
                <rows>
                    <row>
                        <label id="structurednessL" value="Structuredness" width="100%"/>
                        <radio id="ystructuredness" label="yes" selected="true"/>
                        <radio id="nstructuredness" label="no" />
                    </row>
                </rows>
            </grid>
        </radiogroup>

        <radiogroup id="separability">
            <grid>
                <columns>
                    <column />
                    <column />
                    <column />
                </columns>
                <rows>
                    <row>
                        <label id="separabilityL" value="Separability" width="100%"/>
                        <radio id="yseparability" label="yes" selected="true"/>
                        <radio id="nseparability" label="no" />
                    </row>
                </rows>
            </grid>
        </radiogroup>

        <radiogroup id="duplicates">
            <grid>
                <columns>
                    <column />
                    <column />
                    <column />
                </columns>
                <rows>
                    <row>
                        <label id="duplicatesL" value="Duplicates Activities" width="100%"/>
                        <radio id="yduplicates" label="yes" selected="true"/>
                        <radio id="nduplicates" label="no" />
                    </row>
                </rows>
            </grid>
        </radiogroup>

        <div align="center">
            <button id="OKButton" label="OK" iconSclass="z-icon-check-circle"></button>
            <button id="CancelButton" label="Cancel" iconSclass="z-icon-times-circle"></button>
        </div>
    </vbox>
</window>

