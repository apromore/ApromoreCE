<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>community</artifactId>
        <version>1.0</version>
        <relativePath>../../</relativePath>
    </parent>

    <artifactId>bpstruct-osgi</artifactId>
    <version>1.2</version>
    <packaging>bundle</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <!--
                    There is some problem in the bpstruct JAR that causes the newer version to throw an error!
                    So we use the older version as workaround
                -->
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Embed-Dependency>
                            artifactId=bpstruct|de-jbpt|stixar-graph|pnapi-java
                            |antlr-rt|uma|stixar-util|rpst|json
                            |log4j|commons-lang3
                        </Embed-Dependency>
                        <Embed-Transitive>false</Embed-Transitive>
                        <Bundle-ClassPath>.,{maven-dependencies}</Bundle-ClassPath>
                        <Bundle-Name>BPstruct OSGI</Bundle-Name>
                        <Import-Package>
                            !oracle.xml.parser.v2,
                            !org.apache.xerces.*,
                            !org.antlr.stringtemplate,
                            !javax.xml.*,
                            !org.w3c.dom,
                            !org.junit,
                            !junit.*,
                            !javax.swing.*,
                            !org.xml.sax.*,
                            !org.jaxen.*,
                            !oracle.xml.parser,
                            !com.sun.jdmk.comm,
                            !javax.jmdns,
                            !javax.naming,
                            !javax.jms,
                            !com.ibm.uvm.tools,
                            !javax.mail.*,
                            !javax.management,
                            !lpsolve;version="[1.1.0,2.0.0)",
                            *;resolution=optional
                        </Import-Package>
                        <Export-Package>
                            ee.ut.bpstruct,
							ee.ut.comptech
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
    
        <dependency>
            <groupId>ee.ut</groupId>
            <artifactId>bpstruct</artifactId>
            <version>0.1.117</version>
        </dependency>
        
        <dependency>
            <groupId>de.hpi.jbpt</groupId>
            <artifactId>de-jbpt</artifactId>
            <version>0.2.77</version>
        </dependency>
        
        <dependency>
            <groupId>net.stixar</groupId>
            <artifactId>stixar-graph</artifactId>
            <version>1.0</version>
        </dependency>
        
        <dependency>
            <groupId>net.stixar</groupId>
            <artifactId>stixar-util</artifactId>
            <version>1.0</version>
        </dependency>
        
        <dependency>
            <groupId>hub.top.petrinet</groupId>
            <artifactId>pnapi-java</artifactId>
            <version>1.0.5</version>
        </dependency>
        
        <dependency>
            <groupId>org.antlr.runtime</groupId>
            <artifactId>antlr-rt</artifactId>
            <version>3.2.0</version>
        </dependency>
        
        <dependency>
            <groupId>hub.top</groupId>
            <artifactId>uma</artifactId>
            <version>1.3.1</version>
        </dependency>
        
        <dependency>
            <groupId>de.bpt.hpi</groupId>
            <artifactId>rpst</artifactId>
            <version>1.0</version>
        </dependency>
        
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.17</version>
        </dependency>

        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>

    </dependencies>
</project>
 
