<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="Nirdizati" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>

        <class>org.apromore.service.predictivemonitor.impl.PredictiveMonitorImpl</class>
        <class>org.apromore.service.predictivemonitor.impl.PredictiveMonitorEventImpl</class>
        <class>org.apromore.service.predictivemonitor.impl.PredictorImpl</class>
    </persistence-unit>

</persistence>
